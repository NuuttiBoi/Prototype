<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<?import javafx.scene.text.Text?>
<AnchorPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="org.example.prototype.controller.RecommendationViewController"
            prefHeight="400.0" prefWidth="600.0">
    <HBox>
        <ListView fx:id="bookList"/>
        <Button onAction="#handleRemove">Remove</Button>
        <VBox>
            <Text>Add New Book To Recommendation</Text>
            <Label>Author</Label>
            <TextField fx:id="authorText"/>
            <Label>Title</Label>
            <TextField fx:id="titleText"/>
            <Label>Genre</Label>
            <TextField fx:id="genreText"/>
            <Label>Publication Year</Label>
            <TextField fx:id="yearText"/>
            <Button onAction="#handleAdd">Add</Button>
        </VBox>
    </HBox>

</AnchorPane>
